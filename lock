Public Class frmMouseLock
    Private Sub frmMouseLock_KeyDown(sender As Object, e As KeyEventArgs) Handles Me.KeyDown
        If e.KeyCode = Keys.F4 And e.Modifiers = Keys.Alt Then
            e.Handled = True
        End If
    End Sub
    Private Sub tmrLock_Tick(sender As Object, e As EventArgs) Handles tmrLock.Tick
        txtPasswordLock.Select()
        If txtPasswordLock.Text = lockpw Then
            tmrLock.Enabled = False
            Me.Hide()
        Else
            Cursor.Position = New Point(500, 500)
        End If
    End Sub

    Private Sub frmMouseLock_Load(sender As Object, e As EventArgs) Handles MyBase.Load
        tmrLock.Enabled = True
    End Sub

    Private Sub Label2_Click(sender As Object, e As EventArgs) Handles Label2.Click

    End Sub
End Class
